<p id="notice"><%= notice %></p>

<div class="lol text-left">
  <p>
    <strong>Title:</strong>
    <%= @message.title %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= @message.content %>
  </p>
  
  <p>
    <strong>Category:</strong>
    <%= @message.category %>
  </p>

  <p>
  	Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %>
  ago </p>
</div>

<h3>Comments:</h3>
<%= render @message.comments %>

<h3>Reply to Message:</h3>
<%= render 'comments/form' %>

<% if @message.user_id == current_user.id || current_user.Admin? %>
<%= link_to 'Edit', edit_message_path(@message), class:"btn btn-secondary btn-sm" %> |
<%= link_to 'Back', home_path, class:"btn btn-secondary btn-sm" %> |
<%= link_to 'Destroy', message_path,class:"btn btn-secondary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>